@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <br>
    <h1>Sistema de Gestión de los Escultores</h1>
    <br>
    <h2>Impresoras 3D</h2>
    <br>
    <h3>Logueate</h3>
    <br>
    <br>
    <form method="POST">
        <div asp-validation-summary="ModelOnly" class=text-danger></div>
        <div class="form-group">
            <input asp-for="Persona.Documento" type="text" id="Documento" class="text-center" placeholder="Ingrese su documento"
                style="height:45px; width:400px;">
                <br>
            <span asp-validation-for="Persona.Documento" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <input asp-for="Persona.Password" type="password" id="Password" class="text-center" placeholder="Ingrese su Password"
                style="height:45px; width:400px;">
                <br>
            <span asp-validation-for="Persona.Password" class="text-danger"></span>
        </div>
        <p class="text-danger">@ViewData["Error"]</p>
        <br>
        <button type="submit" class="btn btn-primary text-center" style="height:50px;">Confirmar</button>
    </form>
</div>
