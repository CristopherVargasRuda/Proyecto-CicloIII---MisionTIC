@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <br>
    <h1>Sistema de Gestión de los Escultores</h1>
    <br>
    <h2>Impresoras 3D</h2>
    <br>
    <h3>Logueate</h3>
    <br>
    <form method="POST">
        <div asp-validation-summary="ModelOnly" class=text-danger></div>
        <div class="form-group">
            <label asp-for="Persona.Documento" class="form-lable">Documento</label>
            <input asp-for="Persona.Documento" type="text" class="form-control" id="Documento" placeholder="Ingrese su documento">
            <span asp-validation-for="Persona.Documento" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </div>
    </form>
</div>
