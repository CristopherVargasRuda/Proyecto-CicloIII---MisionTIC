@page
@model Impresoras3D.App.Frontend.Pages.LogueoSocioEmpresaModel
@{
    ViewData["Title"] = "Socio Empresa";
}

<body style="background-color: #D9E7FC">
    <div class="text-center">
        <br>
        <h1>Socio Empresa</h1>
        <br>
        <h4>Bienvenido Nuevamente @TempData["Nombre"]</h4>
        <br>
        <div class="row">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Compra de Seguro</h5>
                        <p class="card-text">registrar la compra de un seguro, para tener el dato de la fecha de compra
                            y vencimiento.</p>
                        <a asp-page="../Registros/RegistrarCompraSeguro" class="btn btn-primary"
                            style="height:40px; width:100px;">Ir</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Revisiones</h5>
                        <p class="card-text">Consultar la historia de revisiones hechas a las impresoras.</p>
                        <a asp-page="../Consultas/ConsultarRevisiones" class="btn btn-primary"
                            style="height:40px; width:100px;">Ir</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Seguros</h5>
                        <p class="card-text">Consultar las fechas de vencimiento de los seguros de las impresoras.</p>
                        <a asp-page="../Consultas/ConsultarFechasSeguro" class="btn btn-primary"
                            style="height:40px; width:100px;">Ir</a>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Impresoras</h5>
                        <p class="card-text">Consultar y Actualizar los datos de las impresoras.</p>
                        <a asp-page="../Consultas/ConsultarImpresoras" class="btn btn-primary"
                            style="height:40px; width:100px;">Ir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <a asp-page="../Index" class="btn btn-primary" style="margin-top: 30px; width:200px; top: 70%;">Cerrar
                Sesion</a>
        </div>
    </div>
</body>
